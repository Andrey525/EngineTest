<Window x:Class="WPF_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textbox" HorizontalAlignment="Center" Height="54" Margin="0,289,0,0" TextWrapping="Wrap" Text="Enter ambient temperature" VerticalAlignment="Top" Width="488" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="button" Content="Enter" HorizontalAlignment="Left" Height="54" Margin="649,289,0,0" VerticalAlignment="Top" Width="96" Click="Button_Click"/>
        <Label x:Name="label" Content="" HorizontalAlignment="Left" Height="89" Margin="165,128,0,0" VerticalAlignment="Top" Width="479" Background="#FFFFF4F4"/>
        <Button x:Name="restartButton" Content="Restart" HorizontalAlignment="Left" Height="54" Margin="356,235,0,0" VerticalAlignment="Top" Width="96" Click="Restart_Button_Click"/>

    </Grid>
</Window>
